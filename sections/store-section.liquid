{{ 'store-la.css' | asset_url | stylesheet_tag }}
<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 990px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  }
</style>
<section class="store-section-la section-{{ section.id }}-padding">
  {% if section.settings.image_store != blank %}
    <div class="store-section-wrapper-la {% if section.settings.title_store == blank and section.settings.url_store_button == blank %} full-width-image {% endif %}">
      {% if section.settings.title_store != blank or section.settings.url_store_button != blank %}
        <div class="left-section-la {% if section.settings.chechbox_reverse == true %} chechkox-reverse-grid {% endif %}">
          <div class="left-section-wrapper-la ">
            <h2 class="title-store-la">{{ section.settings.title_store }}</h2>
            {{ section.settings.richtext_description }}
            <a class="store-botton-url" href="{{ section.settings.url_store_button }}">
              {{- section.settings.url_text_bottom -}}
            </a>
          </div>
        </div>
      {% endif %}
      <div class="right-section-la ">
        <img
          src="{{ section.settings.image_store |  image_url: width: 1000  }}"
          width="1000"
          height="700"
          alt="{{ section.settings.image_store }}"
        >
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Store V3",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title_store",
      "label": "Title store"
    },
    {
      "type": "richtext",
      "id": "richtext_description",
      "label": "Richtext"
    },
    {
      "type": "url",
      "id": "url_store_button",
      "label": "Url store button"
    },
    {
      "type": "text",
      "id": "url_text_bottom",
      "label": "Bottom text"
    },
    {
      "type": "checkbox",
      "id": "chechbox_reverse",
      "label": "Section reverse"
    },
    {
      "type": "image_picker",
      "id": "image_store",
      "label": "Image store"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Store"
    }
  ]
}
{% endschema %}
