<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
</style>
<section class="slider_centerline-la section-{{ section.id }}-padding">
  <div class="swiper slider_centerline-wrapper-la">
    <div class="swiper-wrapper swiper-slider-container-la">
      {% for product in section.settings['list_product-la'] %}
        <div class="swiper-slide swiper-slider-item-la">
          <a href="{{ product.url }}" class="url-product_item-la" data-set="remove">
            <img
            src="{{ product.metafields.custom.image_slider_zoom.value |  image_url: width: 1000 }}"
            width="300"
            height="200"
            alt="{{ product.metafields.custom.image_slider_zoom.alt }}"
            class="image-metafiled-in_list-la"
          >
          </a>

         <div class="product_info_url-la">
            <a href="{{ product.url }}" class="slider-product-url-la">
                <p class="slider-product-title-la">{{ product.title }}</p>
            <p class="slider-product-price-la">{{ product.selected_or_first_available_variant.price | money }}</p>
            </a>
            <a href="{{ product.url }}" class="slider-product-page-url-la">SHOP NOW</a>
         </div>
          
        </div>
      {% endfor %}
      
    </div>
    <div class="swiper-button-next swiper-button-next-zoom-la"></div>
      <div class="swiper-button-prev swiper-button-prev-zoom-la"></div>
  </div>
</section>
{% schema %}
{
  "name": "Slider center zoom V5",
  "class": "section",
  "settings": [
    {
      "type": "product_list",
      "label": "List product",
      "id": "list_product-la"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Slider center zoom"
    }
  ]
}
{% endschema %}
