<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 990px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
</style>

<section class="fix_slider-la section-{{ section.id }}-padding">
    {% if section.settings.product_list != blank %}
        <div class="fix-slider-wrapper-la">
            <div class="left_continer_fix">
                <h3>{{ section.settings.info_day_name | upcase }}</h3>
                <h1>{{ section.settings.number_slider }}</h1>
                <p>{{ section.settings.description | upcase }}</p>
                <a class="collection-slider-url-la" href="{{ section.settings.button_url }}">{{ section.settings.text_button_url }}</a>
            </div>
            <div class="swiper slider_fixed_in_product-la">
                <div class="swiper-wrapper slider_fixed_in_product_wrapper-la">
                    {% for product in section.settings.product_list %}
                    <div class="swiper-slide fix-slider-items-la">
                        <a href="{{ product.url }} " class="url_product_in_la" data-set="remove">
                            <img 
                                src="{{ product.metafields.custom.silder_fixed_images_in_product.value | image_url: width: 1000 }}"
                                alt="{{ product.metafields.custom.silder_fixed_images_in_product.alt }}"
                                width="300"
                                height="400"
                            >
                            <p class="title_product_la">{{ product.title }}</p>
                        </a>
                    </div>
                    {% endfor %}
                </div>
                <div class="swiper-pagination swiper-page-scroll-la"></div>
                <div class="swiper-button-next swiper-butt-next-fidex-continer"></div>
                <div class="swiper-button-prev swiper-butt-prev-fidex-continer"></div>
                
            </div>
            <div class="mobile_url_button">
                <a class="collection-slider-url-la" href="{{ section.settings.button_url }}">{{ section.settings.text_button_url }}</a>
                </div>
        </div>
    {% endif %}
</section>

{% schema %}
{
    "name": "Slider fix V2",
    "class": "section",
    "settings": [
        {
            "type": "text",
            "id": "info_day_name",
            "label": "Info day" 
        },
        {
            "type": "text",
            "id": "number_slider",
            "label": "Number"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button url"
        },
        {
            "type": "text",
            "id": "text_button_url",
            "label": "Text button url"
        },
        {
            "type": "product_list",
            "id": "product_list",
            "label": "Product list",
            "limit": 12
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding bottom",
            "default": 36
        }
    ],
    "presets": [
        {
            "name": "Slider fix"
        }
    ]
}
{% endschema %}
